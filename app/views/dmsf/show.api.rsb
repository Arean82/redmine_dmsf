api.dmsf do

  api.array :dmsf_nodes, api_meta(total_count: @query.dmsf_nodes.count) do
    @query.dmsf_nodes.each do |node|
      api.node do
        api.id node.id
        api.title node.title
        api.type node.type
        api.filename node.filename
      end
    end
  end

  if @folder
    api.found_folder do
      api.id @folder.id
      api.title @folder.title
    end
  end

end